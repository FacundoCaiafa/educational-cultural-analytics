import assemblyai as aai
import os

# Configurar clave de API
aai.settings.api_key = "(...)"  # ASSEMBLYAI_API_KEY


transcriber = aai.Transcriber()

# Carpeta donde están los archivos de audio
carpeta_audio = "/Users/facu.caiafa/Downloads/DDA/"
archivo_transcripcion = "/Users/facu.caiafa/Downloads/text.txt"  # Archivo donde guardar todo

# Abrir archivo en modo escritura 
with open(archivo_transcripcion, "w", encoding="utf-8") as f:
    f.write("TRANSCRIPCIONES COMPLETAS\n\n")

# Buscar archivos MP4 en todas las subcarpetas
for carpeta_raiz, subcarpetas, archivos in os.walk(carpeta_audio):
    for archivo in archivos:
        if archivo.endswith(".mp4"):  # Filtrar solo archivos MP4
            ruta_completa = os.path.join(carpeta_raiz, archivo)
            print(f"Transcribiendo: {ruta_completa}")

            try:
                config = aai.TranscriptionConfig(speaker_labels=True, language_code="es")
                transcript = transcriber.transcribe(ruta_completa, config)

                if transcript.status == aai.TranscriptStatus.error:
                    print(f"Error en {archivo}: {transcript.error}")
                    continue

                # Guardar la transcripción en el archivo único
                with open(archivo_transcripcion, "a", encoding="utf-8") as f:
                    f.write(f"=== Transcripción de {archivo} ===\n\n")
                    for utterance in transcript.utterances:
                        f.write(f"Speaker {utterance.speaker}: {utterance.text}\n")

                    f.write("\n" + "="*80 + "\n\n")  # Separador entre transcripciones

                print(f"Transcripción de {archivo} guardada en {archivo_transcripcion}")

            except Exception as e:
                print(f"Error al procesar {archivo}: {e}")

print(f"\n Todas las transcripciones fueron guardadas en: {archivo_transcripcion}")
